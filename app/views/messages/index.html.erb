<h1>Messages</h1>

<% if @messages.any? %>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Chat</th>
        <th>Sender</th>
        <th>Body</th>
        <th>Timestamp</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.id %></td>
          <td>
            Chat <%= message.chat.id %><br>
            (<%= message.chat.sender.email %> â†’ <%= message.chat.receiver.email %>)
          </td>
          <td><%= message.user.email %></td>
          <td><%= truncate(message.body, length: 40) %></td>
          <td><%= message.created_at.strftime("%b %d, %Y %H:%M") %></td>
          <td>
            <%= link_to 'View Message', message_path(message) %>
            <% if can? :edit, message %>
              | <%= link_to 'Edit', edit_message_path(message) %>
            <% end %>
            <% if can? :destroy, message %>
              | <%= link_to 'Delete', message_path(message), method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No messages found.</p>
<% end %>

<div class="links">
  <% if can? :create, Message %>
    <%= link_to 'Create New Message', new_message_path %>
  <% end %>
  <%= link_to 'Back to Chats', chats_path %>
  <%= link_to 'All Users', users_path %>
</div>
