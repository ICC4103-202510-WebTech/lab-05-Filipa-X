<%= form_with(model: chat, local: true) do |form| %>
  <% if chat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chat.errors.count, "error") %> prohibited this chat from being saved:</h2>
      <ul>
        <% chat.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :sender_id, "Sender" %>
    <%= form.collection_select :sender_id, @users, :id, :email, { include_blank: "Select a sender" } %>
  </div>

  <div class="field">
    <%= form.label :receiver_id, "Receiver" %>
    <%= form.collection_select :receiver_id, @users, :id, :email, { include_blank: "Select a receiver" } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
