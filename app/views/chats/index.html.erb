<h1>Chats</h1>

<% if @chats.any? %>
  <table>
    <thead>
      <tr>
        <th>Sender</th>
        <th>Receiver</th>
        <th>Messages</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @chats.each do |chat| %>
        <tr>
          <td><%= chat.sender.email %></td>
          <td><%= chat.receiver.email %></td>
          <td><%= chat.messages.count %></td>
          <td><%= link_to 'View Chat', chat %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No chats found.</p>
<% end %>

<div class="links">
  <%= link_to 'Start New Chat', new_chat_path %>
  <%= link_to 'Back to Users', users_path %>
  <%= link_to 'Create New Message', new_message_path %>
</div>